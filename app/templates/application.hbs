<h2 id='title'>Campfire Friend Network [{{#link-to 'index'}}home{{/link-to}}]</h2>

<div class='container'>
  <div class='row'>
    <div class='col-xs-4'>
      <ul>
        {{#each campfire in model}}
          <li>
            {{#link-to 'campfire' campfire}}{{campfire.name}}{{/link-to}} 
          </li>
        {{/each}}
      </ul>
      <br>
      <form>
        {{input type='text' value=model.newCampfire.name}}
        <input type='submit' value='Save' {{action 'saveNewCampfire'}}>
      </form>
    </div>
    <div class='col-xs-8'>
      {{outlet}}
    </div>
  </div>
</div>
